{
  "source": ["data/tokens/base.json"],
  "platforms": {
    "scss": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/pxToRem",
        "color/css"
      ],
      "files": [
        {
          "destination": "src/styles/_tokens.scss",
          "format": "scss/variables"
        }
      ],
      "options": {
        "outputReferences": true
      }
    },
    "ts": {
      "transforms": [
        "attribute/cti",
        "name/cti/camel",
        "time/seconds",
        "content/icon",
        "size/pxToRem",
        "color/css"
      ],
      "files": [
        {
          "destination": "src/tokens.ts",
          "format": "javascript/es6"
        }
      ],
      "options": {
        "outputReferences": true
      }
    }
  }
}
